<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.karthik.ita_v60.ScanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <Button
            android:id="@+id/button"
            android:layout_width="357dp"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="Live Capture"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button2"
            android:layout_width="357dp"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:text="Choose from Gallary" />

        <Button
            android:id="@+id/btnDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="Confirm Language" />

        <RadioGroup
            android:id="@+id/radio"
            android:layout_width="wrap_content"
            android:layout_height="217dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="71dp"
            android:layout_marginStart="47dp">

            <RadioButton
                android:id="@+id/French"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginTop="31dp"
                android:checked="true"
                android:duplicateParentState="false"
                android:text="French" />

            <RadioButton
                android:id="@+id/Hindi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/French"
                android:layout_alignStart="@+id/French"
                android:layout_below="@+id/French"
                android:layout_marginTop="14dp"
                android:text=" Hindi" />

            <RadioButton
                android:id="@+id/Kannada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/Hindi"
                android:layout_alignStart="@+id/Hindi"
                android:layout_below="@+id/Hindi"
                android:layout_marginTop="17dp"
                android:text="Kannada" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/Kannada"
                android:layout_alignStart="@+id/Kannada"
                android:layout_below="@+id/Kannada"
                android:layout_marginTop="14dp"
                android:text="Malayalam" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="251dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/button"
            android:layout_marginTop="174dp"
            android:text="Current Output Language"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/output"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginEnd="29dp"
            android:text="English"
            android:textSize="18sp" />

    </RelativeLayout>



</RelativeLayout>
